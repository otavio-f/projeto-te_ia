{% extends 'base.html.j2' %}

{% block title %} Superfície de decisão {% endblock %}

{% block content %}
<article>
    <header>
        <h1><i class="fa-solid fa-subscript"></i> Equações</h1>
    </header>
    {% for c1, c2 in data.classifier.keys() %}
    <section>
        <h1>Classe <em class="capitalized">Iris {{ c1 }}</em> x <em class="capitalized">Iris {{ c2 }}</em></h1>
        <p>Equação de superfície: {{ data.classifier[(c1, c2)].eq }}</p>
    </section>
    {% endfor %}
</article>
<article>
    <header>
        <h1><i class="fa-solid fa-square-poll-horizontal"></i> Resultados da classificação</h1>
    </header>
    {% for test in data.tests %}
    <section>
        <h1>Vetor [{{ test.data|join(', ') }}]</h1>
        <p>Classe esperada: <em class="capitalized">Iris {{ test.expected }}</em></p>
        <p>Classe prevista: <em class="capitalized">Iris {{ test.predicted }}</em></p>
        <p>Distância: {{ test.value }}</p>
    </section>
    {% endfor %}
</article>
<nav>
    <a href="{{url_for('datasets.get_dataset', dsid=dataset)}}"">&lt;&lt; Voltar</a>
</nav>
{% endblock %}
