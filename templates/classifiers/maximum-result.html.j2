{% extends 'base.html.j2' %}

{% block title %} Classificador de máximo {% endblock %}

{% block content %}
<article>
    <div class="hide-article visibility-button">
        <i class="fa-solid fa-minus"></i>
    </div>
    <div class="show-article visibility-button">
        <i class="fa-solid fa-plus"></i>
    </div>
    <header>
        <h1><i class="fa-solid fa-subscript"></i> Equações de máximo</h1>
    </header>
    {% for cls in ("setosa", "versicolor", "virginica") %}
    <section>
        <h1>Classe <em class="capitalized">Iris {{ cls }}</em></h1>
        <p>Equação: {{ data.classifier[cls].eq }}</p>
    </section>
    {% endfor %}
</article>

<article>
    <div class="hide-article visibility-button">
        <i class="fa-solid fa-minus"></i>
    </div>
    <div class="show-article visibility-button">
        <i class="fa-solid fa-plus"></i>
    </div>
    <header>
        <h1><i class="fa-solid fa-square-poll-horizontal"></i> Resultados da classificação</h1>
    </header>
    {% for test in data.tests %}
    <section>
        <h1>Vetor [{{ test.data|join(', ') }}]</h1>
        <p>Classe esperada: <em class="capitalized">Iris {{ test.expected }}</em></p>
        <p>Classe prevista: <em class="capitalized">Iris {{ test.predicted }}</em></p>
        <p>Valor: {{ test.value }}</p>
    </section>
    {% endfor %}
</article>
<nav>
    <a href="{{url_for('datasets.get_dataset', dsid=dataset)}}"">&lt;&lt; Voltar</a>
</nav>
{% endblock %}
