{% extends 'base.html.j2' %}

{% block title %} Datasets {% endblock %}

{% block content %}
<section id="title">
    <h1>Classificador de máximo</h1>
</section>
<article id="content">
    <h2 class="title">Equações</h2>
    {% for cls in ("setosa", "versicolor", "virginica") %}
    <section class="dataset">
        <h1 class="species-name">Classe <em class="species-marker">Iris {{ cls }}</em></h1>
        <p>Equação de distância: {{ data.classifier[cls].eq }}</p>
    </section>
    {% endfor %}
    <h2 class="title">Resultados da classificação</h2>
        {% for test in data.tests %}
        <section class="dataset">
            <p>Dado: {{ test.data }} </p>
            <p>Classe esperada: <em class="species-marker">Iris {{ test.expected }}</em></p>
            <p>Classe prevista: <em class="species-marker">Iris {{ test.predicted }}</em></p>
            <p>Distância: {{ test.value }}</em></p>
        </section>
        {% endfor %}
    <a href="{{ url_for('datasets.dataset_home') }}">&lt;&lt; Voltar</a>
</article>
<style>
    .title {
        font-size: 1.25em;
        font-weight: bolder;
        text-decoration: underline;
    }

    .species-name {
        margin-bottom: .5rem;
    }

    .species-marker {
        text-transform: capitalize;
        font-style: italic;
    }
</style>
{% endblock %}
